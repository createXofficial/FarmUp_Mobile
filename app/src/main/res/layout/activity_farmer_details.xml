<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="farmer"
            type="com.createx.farmup.model.entity.Farmer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/farmer_bio"
        tools:context=".view.FarmerDetailsActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="98dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.appcompat.widget.Toolbar
                style="@style/Widget.App.Toolbar"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="44dp"
            android:contentDescription="@string/app_name"
            android:src="@{farmer.image}"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/farmer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@{farmer.name}"
            android:textAppearance="@style/TextAppearance.App.TitleLarge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_image" />

        <TextView
            android:id="@+id/farmer_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@{farmer.bio}"
            android:textAppearance="@style/TextAppearance.App.TitleMedium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/farmer_name" />

        <LinearLayout
            android:id="@+id/ll_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:showDividers="middle"
            android:layout_marginTop="20dp"
            android:divider="@drawable/empty_tall_divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/farmer_info">

            <androidx.cardview.widget.CardView
                android:id="@+id/weather_card"
                android:layout_width="90dp"
                android:layout_height="100dp"
                app:cardCornerRadius="10dp"
                android:padding="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="32dp">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/cloud"/>
                <TextView
                    android:id="@+id/weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/weather"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/pest_card"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:fadingEdgeLength="50dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:padding="10dp"
                    android:src="@drawable/pest"
                    android:contentDescription="@string/app_name"/>

                <TextView
                    android:id="@+id/pest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="68dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/pest"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/disease_card"
                android:layout_width="90dp"
                android:layout_height="100dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:padding="10dp"
                    android:src="@drawable/disease"
                    android:contentDescription="@string/app_name"/>


                <TextView
                    android:id="@+id/disease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="68dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/disease"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

<!--        <Button-->
<!--            android:id="@+id/location_btn"-->
<!--            style="?attr/materialIconButtonStyle"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:text="Location"-->
<!--            android:textAlignment="textStart"-->
<!--            android:layoutDirection="rtl"-->
<!--            android:textAppearance="@style/TextAppearance.App.TitleMedium"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/ll_card"-->
<!--            app:icon="@drawable/arrowright"-->
<!--            app:iconPadding="10dp"-->
<!--            tools:layout_editor_absoluteX="0dp" />-->

        <LinearLayout
            android:id="@+id/ll_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_card">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:gravity="start"
                android:textAppearance="@style/TextAppearance.App.TitleMedium" />

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0dp"/>

            <Button
                style="?attr/materialIconButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                app:icon="@drawable/baseline_arrow_forward_24" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_location"
            tools:layout_editor_absoluteX="0dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
