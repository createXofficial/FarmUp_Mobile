<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/farmer_bio"
    tools:context=".view.FarmerDetailsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/farmer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/farmer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Kofi Bentum"
        android:textAppearance="@style/TextAppearance.App.TitleLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image" />

    <TextView
        android:id="@+id/farmer_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.App.TitleMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/farmer_name" />

    <LinearLayout
        android:id="@+id/ll_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:showDividers="middle"
        android:divider="@drawable/empty_tall_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/farmer_info">

        <androidx.cardview.widget.CardView
            android:id="@+id/weather_card"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="10dp"
            android:padding="5dp"
            android:layout_marginStart="32dp">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                android:src="@drawable/cloud"/>
            <TextView
                android:id="@+id/weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginStart="12dp"
                android:text="@string/weather"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/pest_card"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:fadingEdgeLength="50dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:src="@drawable/pest"
                android:contentDescription="@string/app_name"/>

            <TextView
                android:id="@+id/pest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="68dp"
                android:text="@string/pest"/>
        </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/disease_card"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:padding="10dp"
                        android:src="@drawable/disease"
                        android:contentDescription="@string/app_name"/>


                    <TextView
                        android:id="@+id/disease"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="17dp"
                        android:layout_marginTop="68dp"
                        android:text="@string/disease"/>

                </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/location_btn"
        style="?attr/materialIconButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/app_name"
        android:textAlignment="textStart"
        android:layoutDirection="rtl"
        android:textAppearance="@style/TextAppearance.App.TitleMedium"
        app:layout_constraintTop_toBottomOf="@+id/ll_card"
        app:icon="@drawable/arrowright"
        app:iconPadding="10dp"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:clipToPadding="false"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@+id/location_btn"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>

